class Solution {
    public int findPairs(int[] nums, int k) {
    Arrays.sort(nums);
    Set<Integer> set = new HashSet();
    for(int i=0;i<nums.length-1;i++)
    {
        if(Arrays.binarySearch(nums,i+1,nums.length,nums[i]+k)>0)
        {
            set.add(Math.min(nums[i],nums[i]+k));
        }
    }  
    return set.size();
    }
}
